@model WowDin.Frontstage.Models.ViewModel.Order.CartsViewModel.CartDataViewModel
@{
     var groupBuy = Model.CartDetailDataVM.IsGroupBuy == true ? "揪團" : "";
}


            <div class="card-body text-center">
                <div class="row card-title align-items-center">
                    <div class="col-3 col-sm-3 col-lg-3">
                        <span class="badge order_detail_groupbuy fz_15 p-2">@groupBuy</span>
                    </div>
                    <div class="col-2 col-sm-2 col-lg-2"></div>
                    <div class="col-7 col-sm-7 col-lg-7 text-end text-black order_detail_date">
                        @Model.OrderDate
                    </div>
                </div>
                <div class="row card-body py-1">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <img src="@Model.ShopDataVM.BrandImg" class="w-75 order_detail_brandLogo" alt="brand-logo">
                    </div>
                    <div class="col-4"></div>
                </div>
                <div class="row card-text ">
                    <div class="col-12">
                        <h5 class="text-center text-black fz_15"> @Model.CartDetailDataVM.TotalQuantityByCart 項商品</h5>
                    </div>
                </div>
                <div class="row card-text ">
                    <div class="col-12">
                        <h5 class="text-center d-inline-block text-black fz_15">
                            @Model.ShopDataVM.Brand
                        </h5>
                        <h5 class="text-center d-inline-block text-black fz_15">
                            @Model.ShopDataVM.ShopName
                        </h5>
                    </div>
                </div>
                <div class="row card-text ">
                    <div class="col-12">
                        <hr>
                    </div>
                </div>
                <div class="row card-text ">
                    <div class="col-12">
                        <h5 class="text-center fw-bold text-black fz_16">共 @Model.CartDetailDataVM.TotalPriceByCart 元</h5>
                    </div>
                </div>
                <div class="row card-text ">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <span class="d-inline-block badge rounded-pill bg_pink py-2 px-3 mt-3">立刻結帳</span>
                    </div>
                    <div class="col-2">
                        
                            <i class="d-inline-block fas fa-trash text_pink fz_18 mt-4 me-0 deleteCartBtn" cartid="@Model.CartId"></i>
                        
                    </div>
                </div>
            </div>
        
      
@section endJS{
    <script src="~/js/Order/Cart_Cards.js"></script>
}
