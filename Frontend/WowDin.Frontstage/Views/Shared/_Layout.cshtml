                            </ul>
                        </li>
                    </ul>
                </div>
                <a asp-controller="Home" asp-action="Index" class="text-center"><img class="navbar-center mb-auto" src="/img/Shared_layout/logo.png"
                    style="height: 40px;"></a>
                <button class="navbar" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                </button>

                <div class="collapse navbar-collapse col-5" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
                        @*<li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">通知<span
                                    class="badge rounded-pill badge-notification bg-danger">0</span></a>

                        </li>*@
                        @await Html.PartialAsync("_UserInfo_lg_Partial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg_page layout_more d-none">
        <div class="col-8 m-auto">
            <ul class="d-flex flex-column justify-content-center align-content-center">
                @await Html.PartialAsync("_UserInfoPartial")
            </ul>
        </div>
    </div>
        <div class="bg_page layout__terms d-none">
        <div class="col-8 m-auto">
            <ul class="d-flex justify-content-center align-content-center"> 
                @await Html.PartialAsync("_UserInfoTermsPartial")
            </ul>
        </div>
    </div>
    <div class="bg_page layout_terms d-none">
        <div class="col-8 m-auto">
            <ul class="d-flex flex-column justify-content-center align-content-center">
                @Html.Partial("_UserInfoTermsPartial")
            </ul>
        </div>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer id="footer-large" class="d-none d-lg-block text-center text-lg-start bg-white w-100 py-4">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto">
                    <a asp-controller="Home" asp-action="Index"><img src="/img/Shared_layout/logo.png" style="height: 40px; margin-top: 6px;"></a>
                    <p class="q-mt-md text-18 text-d-gray">© 2020 WowDin 台灣</p>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto me-1">
                    <p>
                        <a asp-controller="Home" asp-action="Index" class="text-reset fz_17">WowDin 訂餐網</a>
                    </p>
                    <p>
                        <a asp-controller="Member" asp-action="ResponsePage" class="text-reset fz_17">意見回饋</a>
                    </p>
                    <p>
                        <a href="#!" class="text-reset fz_17">官方客服</a>
                    </p>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                    <p>
                        <a asp-controller="Home" asp-action="UserTerm" class="text-reset fz_17">使用者條款</a>
                    </p>
                    <p>
                        <a asp-controller="Home" asp-action="PrivacyTerm" class="text-reset fz_17">隱私權條款</a>
                    </p>
                    @*<p>
                        <a asp-controller="Home" asp-action="CreditTerm" class="text-reset">信用卡條款</a>
                    </p>*@
                </div>
                <div class="col-auto">
                    <p> <a href="https://www.facebook.com/WowDin/" target="_blank" class="me-4 text-reset"><i class="social-icon fab fa-facebook"></i></a></p>
                    <p><a href="https://liff.line.me/1645278921-kWRPP32q/?accountId=438fwutz" target="_blank" class="me-4 text-reset"><i class="social-icon fab fa-line"></i></a></p>
                </div>
            </div>
        </div>
    </footer>

    <footer  class="display-in-mobile text-center text-white fixed-bottom mb-5 d-block d-lg-none">
        <div class="col-12 col-lg-8">
            <section id="footer-small" class="bg-light d-flex justify-content-evenly align-items-center">
                <a class="btn text-dark m-1 input_noshadow" asp-controller="Home" asp-action="Index" role="button"
                    data-mdb-ripple-color="dark" style="text-decoration:none;" id="rwdfooter"><i
                        class="fas fa-utensils"></i>
                    <span class="d-block fz_17">訂購</span>
                </a>

                <a class="btn text-dark m-1 input_noshadow" asp-controller="Order" asp-action ="Carts" role="button"
                    data-mdb-ripple-color="dark" style="text-decoration:none;"><i class="fas fa-shopping-cart"></i>
                    <span class="d-block fz_17">購物車</span>
                </a>

                <a class="btn text-dark m-1 input_noshadow" asp-controller="Order" asp-action="Index" role="button"
                    data-mdb-ripple-color="dark" style="text-decoration:none;"><i class="far fa-calendar-check"></i>
                    <span class="d-block fz_17">訂單</span>
                </a>

                <a class="btn text-dark m-1 input_noshadow" asp-controller="Member" asp-action="MemberCardList" role="button"
                    data-mdb-ripple-color="dark" style="text-decoration:none;"><i class="fas fa-user"></i>
                    <span class="d-block fz_17">會員</span>
                </a>

                <a class="btn text-dark m-1 input_noshadow" href="#" role="button"
                     onclick="SwitchMore()">
                    <i class="fas fa-ellipsis-h"></i>
                    <span class="d-block fz_17">更多</span>
                </a>
            </section>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <script>
        toastr.options = {
