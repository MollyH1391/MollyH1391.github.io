                    <ul class="navbar-nav mb-5 mb-lg-0 me-auto">
                        <li class="nav-item">
                            <a class="nav-link active fz_17" aria-current="page" asp-controller="Home" asp-action="Index">訂購</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fz_17" aria-current="page" asp-controller="Order" asp-action ="Carts">購物車</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fz_17" aria-current="page" asp-controller="Order" asp-action="Index">訂單</a>
