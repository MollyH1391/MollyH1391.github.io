@section topCSS{

    <link href="~/css/_settings.css">

    <style>

        #modal-xl___BV_modal_backdrop_{
            background-color: white;
            opacity: 50%;
        }

    </style>
}

<div id="orderdetailVue" class="container">
    <div class="row mb-3">
        <b-card class="col-12" no-body>
            <b-tabs card fill>
                <b-tab title="未接單" class="fz_18">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>訂單編號</th>
                                <th>訂單建立時間</th>
                                <th>會員</th>
                                <th>取餐時間</th>
                                <th>取餐方式</th>
                                <th>發票方式</th>
                                <th>總價</th>
                                <th>詳細</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="order in orderdetailList">
                                <td class="align-middle">{{order.OrderStamp}}</td>
                                <td class="align-middle">{{order.OrderDate}}</td>
                                <td class="align-middle">{{order.UserName}}</td>
                                <td class="align-middle">{{order.PickUpTime}}</td>
                                <td class="align-middle">{{order.TakeMethod}}</td>
                                <td class="align-middle">{{order.ReceiptType}}</td>
                                <td class="align-middle">{{order.TotalPrice}}</td>
                                <td class="align-middle">
                                    <div>
                                        <template>
                                            <div>
                                                <b-button v-b-modal.modal-xl  id="show-btn" v-on:click="showModal">詳細</b-button>

                                                <b-modal static id="modal-xl" size="xl" ref="my-modal" hide-footer title="(訂單(MXXX)的內容)">
                                                    <div class="d-block text-center">
                                                        <h4 class="text-start">外送地址: </h4>
                                                        <!-- 放產品資料 -->
                                                        <table class="table text-center">
                                                            <thead>
                                                                <tr>
                                                                    <th>產品名稱</th>
                                                                    <th>數量</th>
                                                                    <th>單價</th>
                                                                    <th>備註</th>
                                                                    <th>會員</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr v-for="orderdetail in orderdetailList">
                                                                    <td class="align-middle">{{orderdetail.ProductName}}</td>
                                                                    <td class="align-middle">{{orderdetail.Quantity}}</td>
                                                                    <td class="align-middle">{{orderdetail.UnitPrice}}</td>
                                                                    <td class="align-middle">{{orderdetail.Note}}</td>
                                                                    <td class="align-middle">{{orderdetail.UserName}}</td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="row justify-content-between">
                                                        <div class="col-5">
                                                            <b-button class="mt-3 w-100" variant="warning" block
                                                                v-on:click="hideModal_accept">確定接單
                                                            </b-button>
                                                        </div>
                                                        <div class="col-5">
                                                            <b-button class="mt-3 w-100" variant="danger" block
                                                                v-on:click="hideModal_cancel">取消訂單
                                                            </b-button>
                                                        </div>
                                                    </div>
                                                </b-modal>

                                            </div>
                                        </template>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </b-tab>
                <b-tab title="已接單" class="fz_18">
                    Tab contents 2
                </b-tab>
                <b-tab title="已完成" class="fz_18">
                    Tab contents 3
                </b-tab>
                <b-tab title="已取消" class="fz_18">
                    Tab contents 4
                </b-tab>
            </b-tabs>
        </b-card>
    </div>
</div>


