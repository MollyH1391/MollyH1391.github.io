@model WowDin.Frontstage.Models.ViewModel.Order.CartDetailViewModel

@section topCSS{
	<link href="~/css//Order/Order.css" rel="stylesheet">
}

@{
    var random = Guid.NewGuid().ToString().Replace("-", "").Substring(0, 20);
    var cartid = 3;
    var url = $"https://localhost:5001/Order/ECpay/{cartid}_{random}";
}

@section endJS{
    <script>
  
    const paymethod = document.querySelector("#paymethod")
    function goPay() {
        if (paymethod.innerText == "{{刷卡}}") {
            window.location.href = "@url"
        }
    }

    </script>
    
}



