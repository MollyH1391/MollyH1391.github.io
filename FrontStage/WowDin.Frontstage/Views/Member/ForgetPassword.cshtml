@{
    ViewData["Title"] = "忘記密碼";
}

<main class="bg_page vh-100 p-3 px-sm-5 d-sm-flex align-items-sm-center justify-content-sm-center">
    <div class="member_block_m bg-white mx-3 mx-sm-auto px-3  rounded_corner pt-3 pb-3 shadow-sm">
        <h1 class="text-center h5 fw-bold">忘記密碼</h1>
        <span class="d-block w-100 bg-secondary opacity-25 h-1px my-3"></span>
        <form method="post" class="member_content_m mx-auto d-flex flex-column">
          
            <p class="fz_15 my-2">
                <span class="text_pink">＊</span>
                信箱
            </p>
            <div class="input-group">
                <input name="Email" type="email" class="form-control input_noshadow email-input" required>
            </div>

            <span class="text_pink text-center fw-bold mb-3">@ViewData["ErrorMessage"]</span>
            <button class="btn mx-sm-auto bg_pink text-white fw-bold py-3 editpassword_btn mt-sm-3 mb-sm-5" type="submit">重設密碼</button>
          
        </form>
    </div>
</main>


@section topCSS{
    <link href="~/css/Member/member_style.css" rel="stylesheet"/>
}

